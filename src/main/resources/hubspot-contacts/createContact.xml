<!-- API Document: http://developers.hubspot.com/docs/methods/contacts/create_contact -->
<template name="createContact" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="properties" description="The contact details need to be created, as a JSON array."/>
    <sequence>
        <property name="uri.var.properties" expression="$func:properties"/>
        <payloadFactory media-type="json">
            <format>
                {
                "properties":$1
                }
            </format>
            <args>
                <arg expression="get-property('uri.var.properties')"/>
            </args>
        </payloadFactory>
        <property name="DISABLE_CHUNKING" value="true" scope="axis2"/>
        <call>
            <endpoint>
                <http method="post" uri-template="{uri.var.apiUrl}/contacts/v1/contact{+uri.var.apiKey}"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="Access-Control-Allow-Credentials" scope="transport" action="remove"/>
    </sequence>
</template>